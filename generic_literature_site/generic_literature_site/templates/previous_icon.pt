<tal:c tal:condition="sections_of_chapter" i18n:domain="generic_literature_site">
    <tal:v tal:condition="current_section >= 1">
      <a tal:attributes="title string: ${previous_section} (${current_section-1}): ${previous_section_name}"
         accesskey="p" class="btn btn-primary arrow-l"
         href="${'/%s/%s/%s'%(document_id_without_xml, current_chapter, current_section-1)}"></a>
    </tal:v>
</tal:c>

<tal:c tal:condition="sections_of_previous_chapter and current_section<1"
i18n:domain="generic_literature_site">
    <tal:v tal:condition="current_chapter > 1 and (len(sections_of_chapter) == 0 or not is_last_section)">
          <a tal:attributes="title string: ${previous_section} (${current_chapter-1}.${last_section_in_previous_chapter}): ${last_section_in_previous_chapter_name}"
             accesskey="p" class="btn btn-primary arrow-l"
             href="${'/%s/%s/%s'%(document_id_without_xml,current_chapter-1,last_section_in_previous_chapter)}"></a>

    </tal:v>
</tal:c>

<tal:c tal:condition="current_section < 1 and not sections_of_previous_chapter"
i18n:domain="generic_literature_site">
    <tal:v tal:condition="current_chapter > 1">
                  <a tal:attributes="title string: ${previous_chapter} (${current_chapter-1}): ${previous_chapter_name}"
                     accesskey="p" class="btn btn-primary arrow-l"
                     href="${'/%s/%s'%(document_id_without_xml,current_chapter-1)}"></a>
    </tal:v>
</tal:c>


<tal:c tal:condition="current_chapter == 1 and current_section == 0"
                     i18n:domain="generic_literature_site">
    <tal:v>
      <a title="Intet tidligere kapitel"
         accesskey="p" class="btn btn-primary arrow-l"
         href=""
         i18n:attributes="title"></a>
    </tal:v>
</tal:c>
